function calculatePrice() {
    const cost = parseFloat(document.getElementById('cost').value);
    const profitPercentage = parseFloat(document.getElementById('profitPercentage').value);
    
    if (!isNaN(cost) && !isNaN(profitPercentage)) {
        const profit = (cost * profitPercentage) / 100;
        const finalPrice = cost + profit;
        
        document.getElementById('finalPrice').textContent = finalPrice.toFixed(2);
    } else {
        alert('Por favor, ingrese valores v√°lidos.');
    }
}
